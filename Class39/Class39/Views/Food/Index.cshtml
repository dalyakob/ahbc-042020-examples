@model Food
<h1>Food</h1>
<h4>Add your favorite food</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Food" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label">The Food Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">The Food Category</label>
                <select class="form-control" asp-for="Category">
                    <option>Italian</option>
                    <option>Mediterranian</option>
                    <option>Mexican</option>
                    <option>Thai</option>
                    <option>Chinese</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>